{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#FFFFFF",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#AB0A30",
					"name": "Dark Red",
					"slug": "dark-red"
				},
				{
					"color": "#005092",
					"name": "Dark Blue",
					"slug": "dark-blue"
				},
				{
					"color": "#0193BD",
					"name": "Light Blue",
					"slug": "light-blue"
				}
			]
		},
		"layout": {
			"contentSize": "1340px",
			"wideSize": "1340px"
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingSizes": [
				{
					"name": "10",
					"size": "10px",
					"slug": "10"
				},
				{
					"name": "20",
					"size": "20px",
					"slug": "20"
				},
				{
					"name": "40",
					"size": "40px",
					"slug": "40"
				},
				{
					"name": "60",
					"size": "60px",
					"slug": "60"
				},
				{
					"name": "80",
					"size": "80px",
					"slug": "80"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"writingMode": true,
			"defaultFontSizes": false,
			"fluid": true,
			"fontSizes": [
				{
					"fluid": true,
					"name": "Small",
					"size": "12px",
					"slug": "small"
				},
				{
					"fluid": true,
					"name": "Middle",
					"size": "14px",
					"slug": "middle"
				},
				{
					"fluid": true,
					"name": "Regular",
					"size": "16px",
					"slug": "regular"
				},
				{
					"fluid": true,
					"name": "Medium",
					"size": "20px",
					"slug": "medium"
				},
				{
					"fluid": true,
					"name": "Large",
					"size": "24px",
					"slug": "large"
				},
				{
					"fluid": true,
					"name": "Extra Large",
					"size": "36px",
					"slug": "x-large"
				},
				{
					"fluid": false,
					"name": "Extra Extra Large",
					"size": "40px",
					"slug": "xx-large"
				}
			],
			"fontFamilies": [
				{
					"name": "Poppins",
					"slug": "poppins",
					"fontFamily": "Poppins, sans-serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/poppins/Poppins-Light.woff2"
							],
							"fontWeight": "300",
							"fontStyle": "light",
							"fontFamily": "Poppins"
						},
						{
							"src": [
								"file:./assets/fonts/poppins/Poppins-Regular.woff2"
							],
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontFamily": "Poppins"
						},
						{
							"src": [
								"file:./assets/fonts/poppins/Poppins-Medium.woff2"
							],
							"fontWeight": "500",
							"fontStyle": "medium",
							"fontFamily": "Poppins"
						},
						{
							"src": [
								"file:./assets/fonts/poppins/Poppins-Bold.woff2"
							],
							"fontWeight": "700",
							"fontStyle": "bold",
							"fontFamily": "Poppins"
						}
					]
				},
				{
					"name": "PTSerif",
					"slug": "ptserif",
					"fontFamily": "PTSerif, serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/ptserif/PTSerif-Regular.woff2"
							],
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontFamily": "PTSerif"
						},
						{
							"src": [
								"file:./assets/fonts/ptserif/PTSerif-Bold.woff2"
							],
							"fontWeight": "700",
							"fontStyle": "bold",
							"fontFamily": "PTSerif"
						}
					]
				}
			]
		},
		"useRootPaddingAwareAlignments": true,
		"shadow": {
			"defaultPresets": true,
			"presets": [
				{
					"name": "Box Shadow",
					"slug": "boxshadow",
					"shadow": "1px 1px 15px rgba(0, 0, 0, 0.1)"
				},
				{
					"name": "Text Shadow",
					"slug": "textshadow",
					"shadow": "1px 5px 5px rgba(0, 0, 0, 0.2)"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var:preset|color|base",
			"text": "var:preset|color|contrast"
		},
		"spacing": {
			"blockGap": "var:preset|spacing|20",
			"padding": {
				"left": "var:preset|spacing|40",
				"right": "var:preset|spacing|40"
			},
			"margin": "null"
		},
		"typography": {
			"fontFamily": "var:preset|font-family|poppins",
			"fontSize": "var:preset|font-size|regular",
			"fontWeight": "300",
			"letterSpacing": "-0.1px",
			"lineHeight": "1.4"
		},
		"blocks": {
			"core/avatar": {
				"border": {
					"radius": "100px"
				}
			},
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": null,
							"style": null,
							"width": null,
							"top": {
								"width": "1px",
								"style": "solid",
								"color": "currentColor"
							},
							"right": {
								"width": "1px",
								"style": "solid",
								"color": "currentColor"
							},
							"bottom": {
								"width": "1px",
								"style": "solid",
								"color": "currentColor"
							},
							"left": {
								"width": "1px",
								"style": "solid",
								"color": "currentColor"
							},
							"radius": "0px"
						},
						"color": {
							"text": "var:preset|color|dark-red"
						},
						"typography": {
							"fontFamily": "var:preset|font-family|poppins",
							"fontSize": "var:preset|font-size|regular",
							"lineHeight": "1",
							"fontStyle": "normal",
							"fontWeight": "500"
						}
					}
				},
				"color": {
					"background": "var:preset|color|dark-red"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|poppins",
					"fontSize": "var:preset|font-size|regular",
					"lineHeight": "1",
					"fontStyle": "light",
					"fontWeight": "500"
				},
				"border": {
					"radius": "0px"
				},
				"spacing": {
					"padding": {
						"left": "var:preset|spacing|40",
						"right": "var:preset|spacing|40",
						"top": "var:preset|spacing|20",
						"bottom": "var:preset|spacing|20"
					}
				}
			},
			"core/columns": {
				"css": "width: 100%",
				"spacing": {
					"blockGap": "var:preset|spacing|40"
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "var:preset|spacing|40"
				}
			},
			"core/post-date": {
				"color":{
					"text": "var:preset|color|dark-red"
				},
				"elements": {
					"link": {
						"color" : {
							"text": "var:preset|color|dark-red"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|small"
				}
			},
			"core/post-navigation-link": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"core/post-terms": {
				"css": "& a { white-space: nowrap; }",
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "500"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/quote": {
				"border": {
					"style": "solid",
					"width": "0 0 0 2px",
					"color": "currentColor"
				},
				"spacing": {
					"blockGap": "var:preset|spacing|10",
					"margin": {
						"left": "0",
						"right": "0"
					},
					"padding": {
						"top": "var:preset|spacing|20",
						"right": "var:preset|spacing|40",
						"bottom": "var:preset|spacing|20",
						"left": "var:preset|spacing|40"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|regular"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var:preset|font-size|small",
							"fontStyle": "normal",
							"fontWeight": "300"
						},
						"css": "& sub { font-size: 0.65em }"
					}
				},
				"css": "&.has-text-align-right { border-width: 0 2px 0 0; } &.has-text-align-center { border-width: 0;border-inline: 0; padding-inline: 0; }",
				"variations": {
					"plain": {
						"border": {
							"color": "transparent",
							"style": "none",
							"width": "0",
							"radius": "0"
						},
						"spacing": {
							"padding": {
								"top": "0",
								"right": "0",
								"bottom": "0",
								"left": "0"
							}
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"core/search": {
				"css": "& .wp-block-search__input{padding-left:1.5625rem;padding-right:1.5625rem;border-color:var(--wp--preset--color--dark-blue);}",
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"lineHeight": "1.6"
				},
				"elements": {
					"button": {
						"border": {
							"radius": "0"
						},
						"spacing": {
							"margin": {
								"left": "1.125rem"
							}
						},
						":hover" : {
							"border": {
								"color": "transparent"
							}
						}
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "currentColor",
					"style": "solid",
					"width": "0 0 1px 0"
				},
				"color": {
					"text": "var:preset|color|dark-red"
				},
				"variations": {
					"wide": {
						"css": " &:not(.alignfull){max-width: var(--wp--style--global--wide-size) !important;}"
					}
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "700"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/term-description": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/list": {
				"css": "& li{margin-top: 0.5rem;}"
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "var:preset|color|contrast",
					"text": "var:preset|color|base"
				},
				":focus": {
					"outline": {
						"color": "var:preset|color|dark-red",
						"offset": "2px"
					}
				},
				":hover": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--contrast) 85%, transparent)",
						"text": "var:preset|color|base"
					},
					"border": {
						"color": "transparent"
					}
				},
				"spacing": {
					"padding": {
						"bottom": "var:preset|spacing|20",
						"left": "var:preset|spacing|40",
						"right": "var:preset|spacing|40",
						"top": "var:preset|spacing|20"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"caption": {
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"lineHeight": "1.4"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var:preset|font-size|xx-large"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var:preset|font-size|x-large"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var:preset|font-size|large"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var:preset|font-size|regular",
					"letterSpacing": "0.5px"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|ptserif",
					"fontWeight": "700"
				},
				"color": {
					"text": "var:preset|color|contrast"
				}
			},
			"link": {
				"color": {
					"text": "currentColor"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "sidebar",
			"title": "Sidebar"
		},
		{
			"area": "uncategorized",
			"name": "activityloop",
			"title": "Activities"
		},
		{
			"area": "uncategorized",
			"name": "newsloop",
			"title": "News"
		},
		{
			"area": "uncategorized",
			"name": "numbers",
			"title": "HKU Numbers"
		},
		{
			"area": "uncategorized",
			"name": "sidemenu",
			"title": "Sidemenu"
		},
		{
			"area": "uncategorized",
			"name": "searchresult",
			"title": "Global Search Result"
		},
		{
			"area": "uncategorized",
			"name": "featured_image",
			"title": "Get the featured image with title"
		}
	],
	"customTemplates": [
		{
			"name": "page-no-title",
			"postTypes": ["page"],
			"title": "Page No Title"
		}
	]
}